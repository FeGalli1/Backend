<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>

    <div class="container mt-4">
        <h2>Lista de Productos</h2>
        <% products.forEach(product => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text">Descripción: <%= product.description %></p>
                    <p class="card-text">Precio: <%= product.price %></p>                    
                    <p class="card-text">Categoría: <%= product.category %></p>
                    <p class="card-text">Stock: <%= product.stock %></p>
                    <!-- Agrega más campos según tus necesidades -->

                    <!-- Botones para modificar, guardar y eliminar -->
                    <a href="/admin/productos/<%= product._id %>/editar" class="btn btn-primary">Modificar</a>
                    <a href="/admin/productos/<%= product._id %>/eliminar" class="btn btn-danger">Eliminar</a>
                    <button class="btn btn-success" onclick="guardarCambios('<%= product._id %>')">Guardar</button>
                </div>
            </div>
        <% }); %>

        <div class="mb-3 d-flex justify-content-center align-items-center">
            <a href="/admin/productos/nuevo" class="btn btn-info">Cargar Nuevo Producto</a>
        </div>
            
    </div>

    <script>
        // Puedes agregar lógica JavaScript aquí si es necesario
        function guardarCambios(productId) {
            // Lógica para guardar los cambios en el producto con el ID proporcionado
            // Puedes usar AJAX u otras técnicas según tus necesidades
            console.log('Guardar cambios para el producto con ID:', productId);
        }
    </script>

</body>

</html>
